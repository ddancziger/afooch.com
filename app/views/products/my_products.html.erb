<h4>My Products</h4>

<% @products.each do |product| %>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= link_to product.title, product_path(product.id) %></h3>
      </div>
      <div class="panel-body">
        Offers <%= product.offers.count %>
      </div>
    </div>
<% end %>