
<%= form_for @product, url: wizard_path, method: :put do |f| %>
    <div class="form-group">
      <div class="form-group">
        <div class="col-md-12">
            <div class="col-md-4">
                <%= f.label :minPrice %>
                <%= f.number_field :minPrice %>
            </div>
            <div class="col-md-4">
                <%= f.label :maxPrice %>
                <%= f.number_field :maxPrice %>
            </div>
            <div class="col-md-4">
                <%= f.label :currency %>
                <%= f.select :currency, Product.currencies.keys.to_a.map { |w| [w.humanize, w] } %>
            </div>
        </div>
       </div>


          <div class="form-group">
            <div class="col-md-12">
                <div class="col-md-4">
                    <%= f.label :numberArrival %>
                    <%= f.number_field :numberArrival  %>
                </div>
              <div class="col-md-4">
                <%= f.label :arrival %>
                <%= f.select :arrival, Product.arrivals.keys.to_a.map { |w| [w.humanize, w] } %>
              </div>
            </div>
          </div>






      <div class="form-group">
        <div class="col-md-12">
            <div class="col-md-4">
                <%= f.label :cityArrival %>
                <%= f.text_field :cityArrival, value: (nil || current_user.city), class:"form-control" %>
            </div>
            <div class="col-md-4">
                <%= f.label :countryArrival %>
                <%= country_select("product", "countryArrival", selected: (nil || current_user.country), class:"form-control") %>
            </div>
        </div>
      </div>
        <%= f.submit "Publish Product", class:"btn btn-default pull-right" %>
    </div>
<% end %>