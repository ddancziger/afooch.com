<h3>SubCategories</h3>

<% @subcategories.each do |subcategory| %>
    <div class="row">
        <h4><%= subcategory.name %></h4>
        <h6>Last Products</h6>
        <% subcategory.products.limit(5).each do |product| %>
            <div class="column-md-2">
              <h6><%= product.title %></h6>

            </div>
         <% end %>
    </div>
<% end %>
